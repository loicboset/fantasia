<%= simple_form_for :search, url: root_path, method: :get, html: {class: 'search-bar', autocomplete: 'off'} do |f| %>
  <div class="search-form-control form-group" id="search-bar-container">

    <input class="form-control string required" type="text" name="search[query]" id="search_query" />

    <%= select_tag :term, options_for_select(@characters.map{|c| [c.name, c.id ] }), id: "select_characters", prompt: "" %>
    <div id="search-div" class="hidden">
      <ul id="results">
      </ul>
    </div>
    <button name="button" type="submit" class="btn btn-flat"><i class="fas fa-search"></i></button>

  </div>
<% end %>



